# ==============================================
# INBOX NAVIGATOR - Environment Variables
# ==============================================
# Copy this file to .env and fill in the values
# NEVER commit your actual .env file to git!

# ==============================================
# DATABASE
# ==============================================
# PostgreSQL connection string (use Neon or similar)
DATABASE_URL="postgresql://username:password@host:5432/database"

# ==============================================
# AUTHENTICATION (Clerk)
# ==============================================
# Get these from https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
CLERK_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Optional: Customize Clerk routes
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/onboarding"

# ==============================================
# PAYMENT (Stripe)
# ==============================================
# Get these from https://dashboard.stripe.com/
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
STRIPE_SECRET_KEY="sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# ==============================================
# ENCRYPTION & SECURITY
# ==============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY="your-64-character-hex-string-here-or-min-32-char-string"

# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_SALT="your-unique-salt-here-min-16-chars"

# Enable/disable encryption of onboarding secrets (recommended: true in production)
ENCRYPT_ONBOARDING_SECRETS="true"

# ==============================================
# ADMIN ACCESS
# ==============================================
# Comma-separated list of Clerk user IDs with admin access
# Get user IDs from Clerk dashboard
ADMIN_USER_IDS="user_xxxxxxxxxxxxxxxxxxxxx,user_yyyyyyyyyyyyyyyyyyyyy"

# ==============================================
# REDIS (Optional but Recommended)
# ==============================================
# Redis connection string for caching
# Use Upstash, Redis Cloud, or self-hosted
REDIS_URL="redis://default:password@host:6379"

# ==============================================
# EMAIL (Resend)
# ==============================================
# Get from https://resend.com/
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# ==============================================
# NOTIFICATIONS (Slack)
# ==============================================
# Optional: Slack webhook for notifications
# Example format: https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_WEBHOOK_URL=""

# ==============================================
# INTERCOM (Optional)
# ==============================================
# Get from https://app.intercom.com/
NEXT_PUBLIC_INTERCOM_APP_ID="xxxxxxxx"

# ==============================================
# ENVIRONMENT
# ==============================================
# Node environment (development, production, test)
NODE_ENV="development"

# ==============================================
# DEPLOYMENT (Vercel)
# ==============================================
# These are automatically set by Vercel
# NEXT_PUBLIC_VERCEL_URL
# VERCEL_URL
# VERCEL_ENV

# ==============================================
# OPTIONAL: DEVELOPMENT TOOLS
# ==============================================
# Enable bundle analyzer
# ANALYZE="true"

# Enable debug logging
# DEBUG="true"
